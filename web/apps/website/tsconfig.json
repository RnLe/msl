{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "composite": true, // for project references
    "baseUrl": ".", // needed for path aliases below
    "paths": {},
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "mdx": {
    "plugins": [
      "remark-math"
    ]
  },
  "references": [],
  "include": [
    "app",
    "next.config.ts",
    "src",
    ".next/types/**/*.ts",
    "public/**/*.json",       // Include all JSON files in the public directory
    "changelog",             // Include the changelog directory
    "packages",             // Include the packages directory
    "**/*.tsx",
    "**/*.jsx",
    "content/[[...mdxPath]]", "content/theory.mdx",
  ],
  "exclude": [
    "node_modules"
  ]
}
